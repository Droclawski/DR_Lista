@model DR_Lista.Models.ShoppingList

@{
    ViewData["Title"] = "Add new shopping list";
}

<style>
    body {
        background-color: #f0f4f8;
        font-family: 'Arial', sans-serif;
    }

    .card-custom {
        background: linear-gradient(135deg, #ece9e6 0%, #ffffff 100%);
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-primary-custom,
    .btn-secondary-custom {
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        color: white;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn-primary-custom {
        background-color: #007bff;
    }

        .btn-primary-custom:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .btn-secondary-custom {
        background-color: #6c757d;
    }

        .btn-secondary-custom:hover {
            background-color: #5a6268;
            transform: scale(1.05);
        }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
    }

    h1, h3 {
        font-weight: bold;
    }

</style>

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12 text-center">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-custom shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        @Html.AntiForgeryToken()
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Date" class="form-label">Planned date</label>
                            <input asp-for="Date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input type="submit" value="Create" class="btn btn-primary-custom w-100" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <a asp-action="Index" class="btn btn-secondary-custom">Return</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}